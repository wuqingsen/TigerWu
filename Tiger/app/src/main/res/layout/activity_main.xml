<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_1"
                android:layout_width="130pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="116pt"
                android:layout_marginTop="78pt" />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_2"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22pt"
                android:layout_marginTop="78pt" />

            <com.demo.winwang.tigermachine.widget.WheelView
                android:id="@+id/dialog_slot_3"
                android:layout_width="128pt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22pt"
                android:layout_marginTop="78pt" />


        </LinearLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="开始"/>
</LinearLayout>
